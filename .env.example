# Application Environment
APP_ENV=development
APP_NAME="DocReader AI Studio"
BASE_URL=http://localhost/KK

# Database Configuration
DB_HOST=localhost
DB_NAME=docreader_ai_studio
DB_USER=root
DB_PASS=

# JWT Secret Key (generate a random string)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# MegaLLM API Configuration (Required for translation & summarization)
MEGALLM_API_KEY=your_megallm_api_key_here
MEGALLM_BASE_URL=https://ai.megallm.io/v1
MEGALLM_MODEL=gpt-5

# Azure Speech Service Configuration (Required for TTS)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_KEY2=your_azure_speech_key2_here
AZURE_SPEECH_REGION=eastus

# SMTP Email Configuration (Optional - for OTP/Reset Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM_EMAIL=noreply@docreader.com
SMTP_FROM_NAME="DocReader AI Studio"

# Application Settings
MAX_FILE_SIZE=10485760
MAX_TEXT_LENGTH=5000
OTP_EXPIRY_MINUTES=10
SESSION_TIMEOUT=1800
